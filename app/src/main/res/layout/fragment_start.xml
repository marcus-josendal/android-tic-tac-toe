<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragments.StartFragment">
    <Button
            android:text="@string/btnAi"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/apache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnAi"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toStartOf="@+id/btnVs"
            android:layout_marginEnd="8dp"/>
    <Button
            android:text="@string/btnVs"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/apache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnVs"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="68dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnAi" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:id="@+id/linearLayout">
        <Button
                android:text="@string/btnEasyString"
                android:background="@drawable/btn_border"
                android:fontFamily="@font/apache"
                android:layout_width="50dp"
                android:layout_height="wrap_content" android:id="@+id/btnEasy" android:layout_weight="1"/>
        <Button
                android:text="@string/btnMediumString"
                android:background="@drawable/btn_border"
                android:fontFamily="@font/apache"
                android:layout_width="50dp"
                android:layout_height="wrap_content" android:id="@+id/btnMedium" android:layout_weight="1"/>
        <Button
                android:text="@string/btnGowString"
                android:background="@drawable/btn_border"
                android:fontFamily="@font/apache"
                android:layout_width="50dp"
                android:layout_height="wrap_content" android:id="@+id/btnGow" android:layout_weight="1"/>
    </LinearLayout>
    <Button
            android:text="@string/btnStartGameString"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/apache"
            android:layout_width="wrap_content"
            android:layout_height="54dp"
            android:id="@+id/btnStartGame" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.674"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/player1NameString"
            android:fontFamily="@font/apache"
            android:ems="10"
            android:id="@+id/player1Name" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/btnStartGame" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="310dp"
            android:layout_height="240dp"
            android:id="@+id/imageView" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.494"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apache"
            android:inputType="textPersonName"
            android:text="@string/player2String"
            android:ems="10"
            android:id="@+id/player2Name" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/player1Name"/>
</android.support.constraint.ConstraintLayout>