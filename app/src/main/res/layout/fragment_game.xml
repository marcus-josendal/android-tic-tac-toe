<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragments.GameFragment">

    <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:id="@+id/tableLayout2">

        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button

                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn1String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn1"/>
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn2String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn2"/>
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn3String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn3"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn4String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn4"/>
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn5String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn5"/>
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn6String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn6"/>
        </TableRow>
        <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn7String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn7"/>
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn8String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn8"/>
            <Button
                    android:background="@drawable/btn_border"
                    android:fontFamily="@font/apache"
                    android:textSize="20sp"
                    android:text="@string/btn9String"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp" android:id="@+id/btn9"/>
        </TableRow>
    </TableLayout>

    <Chronometer android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:fontFamily="@font/apache"
                 app:layout_constraintEnd_toEndOf="parent"
                 android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                 app:layout_constraintBottom_toTopOf="@+id/winnerText" android:layout_marginTop="8dp"
                 app:layout_constraintTop_toBottomOf="@+id/tableLayout2" app:layout_constraintHorizontal_bias="0.81"
                 app:layout_constraintVertical_bias="0.0" android:id="@+id/timer"/>

    <TextView
            android:text="@string/winnerText"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/apache"
            android:id="@+id/winnerText" android:textSize="30sp"
            android:textStyle="bold" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tableLayout2"
            app:layout_constraintVertical_bias="0.237" app:layout_constraintHorizontal_bias="0.467"/>
    <Button
            android:text="@string/btnResetString"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/apache"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:id="@+id/btnReset"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="68dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/winnerText"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="@string/btnHighscoreString"
            android:background="@drawable/btn_border"
            android:fontFamily="@font/apache"
            android:layout_width="130dp"
            android:layout_height="65dp"
            android:id="@+id/btnHighscore"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/winnerText" app:layout_constraintStart_toEndOf="@+id/btnReset"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:src="@drawable/logo"
            android:layout_width="390dp"
            android:layout_height="172dp"
            android:id="@+id/imageView2" android:layout_marginTop="52dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="@string/playersText"
            android:fontFamily="@font/apache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playersText" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
            android:textSize="20sp" android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>